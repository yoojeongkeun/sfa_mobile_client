tab02 = 
{	 
    init:function(json)
	{
    	tab02.initInterface();
    	tab02.initData(json);
    	tab02.initLayout();
	},
	initInterface:function()
	{
		// 하단 탭 show, hide 기능
		$(".t2_liTab").click(function(){
			$(".t2_liTab button").removeAttr("id");
			$(this).find("button").attr("id", "current");
			var tabIndex = $(this).attr("tabindex");
			if(tabIndex == "1" ){
				$("#t2_divTab1").show();
				$("#t2_divTab2").hide();
			}else if(tabIndex == "2"){
				$("#t2_divTab1").hide();
				$("#t2_divTab2").show();
			}			
		});
		$(".t2_btnSave").click(function(){
			 bizMOB.Ui.alert("TAB2에서 저장버튼");
		 });
		
		$("#t02_btnSearch").click(function(){
			tab02.getCustInfo();
		});
	},	 
	initData:function(json)
	{
		 
	},	 
	initLayout:function()
	{	
		
	},
	getCustInfo: function(){
		var tr = bizMOB.Util.Resource.getTr("Cesco", "SD01302");
		tr.body.P01 = "";
		tr.body.P02 = "변영석";
		tr.body.P03 = "";
		tr.body.P04 = "10225";
		
		bizMOB.Web.post({
			message: tr,
			success: function(json){
				if(!json.header.result){
					bizMOB.Ui.alert("안내", "유망고객 리스트를 불러오는데 실패하였습니다.");
					return;
				}
				
				// 고객 조회가 2 이상일 경우 팝업으로 고객 선택
				if(json.body.LISt02.length > 1){
					
				}else{
					var list = json.body.LISt02[0];
					$("#t02_txtCustCode").val(list.R01);
					$("#t02_txtCustName").val(list.R02);
					$("#t02_txtFacilityName").val(list.R03);
				}
				
			}		
		});
	}
};


